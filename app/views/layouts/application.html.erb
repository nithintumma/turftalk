<!DOCTYPE html>
<html>
  <head>
    <title>TurfTalk</title>
    <%= csrf_meta_tag %>
    <!--[if lt IE 9]>
    <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <%= javascript_include_tag "application" %>
    <%= stylesheet_link_tag 'blueprint/screen', :media => 'screen' %>
    <%= stylesheet_link_tag 'blueprint/print', :media => 'print' %>
    <!--[if lt IE 8]><%= stylesheet_link_tag 'blueprint/ie' %><![endif]-->
    <%= stylesheet_link_tag 'custom', :media => 'screen' %>
  </head>
  <%if "#{request.protocol}#{request.host_with_port}#{request.fullpath}" == root_url %>
    <body id = "homepagebackground">
  <% else %>
    <body>
  <% end %>
  
    <div class="container-fluid">
      <%= render 'layouts/header' %>
      <section class="round">
        <% flash.each do |key, value| %>
          <div class="flash <%= key %>"><%= value %></div>
        <% end %>
        <%= yield %>
      </section>
    </div>
    <div style = "position:fixed;margin-left:auto;margin-right:auto;bottom:0px;height:30px;width:100%;">
      <%= render 'layouts/footer' %>
    </div>
  </body>
</html>
