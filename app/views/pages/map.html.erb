<h1>
	<%= "Map - #{Turf.count} turfs around the world (and counting)!" %> 
</h1>

<% url = "http://maps.googleapis.com/maps/api/staticmap?size=1200x1200&sensor=false&" %>

<% Turf.all.each do |turf| %>
	<% if Float(turf.latitude) == 0 && Float(turf.longitude) %>
	<% elsif url.length < 2000 %>
		<% url += "&markers=color:red%%7C#{turf.latitude},#{turf.longitude}" %>
		<% description = turf.name + " at " + turf.latitude + ", " + turf.longitude + "" %>

	<% end %>
<% end %>

<div id = "image" style = "margin-left:auto; margin-right:auto; width:650px;">
	<%= image_tag url, :class => "img-polaroid"%>
</div>